    "primary": "#0099FF",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.png",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development",
              "welcome"
