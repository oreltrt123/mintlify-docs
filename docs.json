        {
          "anchor": "Community",
          "href": "https://discord.gg/F4hDQGCN",
          "icon": "slack"
        },
        {
          "anchor": "Blog",
          "href": "https://zerlo.online/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:zerlocontactus@gmail.com"
      }
    ],
    "primary": {
